# Reference: https://github.com/argoproj/argo-helm/blob/master/charts/argo-cd/values.yaml

argo-cd:
  enabled: true
  configs:
    secret:
      # $ARGO_PWD=password
      # htpasswd -nbBC 10 "" $ARGO_PWD | tr -d ':\n' | sed 's/$2y/$2a/'
      argocdServerAdminPassword: "$2a$10$qsjuZNhoJR7UHv/v/CryaOe0wewDzzH.wP.j1YAVLqgBXWZImdQ/u"

  controller:
    clusterAdminAccess:
      enabled: true
    
    resources:
      limits:
        cpu: 500m
        memory: 640Mi
      requests:
        cpu: 250m
        memory: 384Mi

  # used to delegate authentication to external identity provider
  dex:
    enabled: false

  redis:
    resources:
      limits:
        cpu: 200m
        memory: 128Mi
      requests:
        cpu: 100m
        memory: 64Mi
    
  server:
    extraArgs:
      - --insecure
      - --rootpath={{install.argocd.dashboard.path}}

    resources:
      limits:
        cpu: 100m
        memory: 128Mi
      requests:
        cpu: 50m
        memory: 64Mi

    config:
      repositories: |
        - url: {{install.argocd.repository.url}}
          name: {{install.argocd.repository.name}}
          usernameSecret:
            name: {{install.argocd.repository.name}}-secret
            key: username
          passwordSecret:
            name: {{install.argocd.repository.name}}-secret
            key: password

  repoServer:
    resources:
      limits:
        cpu: 50m
        memory: 192Mi
      requests:
        cpu: 10m
        memory: 128Mi

  notifications:
    resources:
      limits:
        cpu: 100m
        memory: 128Mi
      requests:
        cpu: 100m
        memory: 128Mi
    