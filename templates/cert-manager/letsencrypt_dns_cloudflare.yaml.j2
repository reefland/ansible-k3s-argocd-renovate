apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {% if install.traefik.le_staging|default(true)|bool == true %}letsencrypt-staging{% else %}letsencrypt-prod{% endif %}{{''}}
  namespace: cert-manager
spec:
  acme:
    email: {{traefik.le_email_auth}}
    server: {% if install.traefik.le_staging|default(true)|bool == true %}{{traefik.le_staging_server}}{% else %}{{traefik.le_production_server}}{% endif %}{{''}}
    privateKeySecretRef:
      name: issuer-{% if install.traefik.le_staging|default(true)|bool == true %}letsencrypt-staging{% else %}letsencrypt-prod{% endif %}{{''}}
    solvers:
    - dns01:
        cloudflare:
          apiTokenSecretRef:
            key: api-token
            name: cloudflare-api-token-secret
