---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
metadata:
  name: upgrade-controller-kustomization

resources:
  - github.com/rancher/system-upgrade-controller?ref={{install.upgrade_controller.install_version}}
  - k3s-control-plan.yaml
  - k3s-worker-plan.yaml
  - crd

images:
  - name: rancher/system-upgrade-controller
    newTag: {{install.upgrade_controller.install_version}}

patchesStrategicMerge:
  # Delete namespace resource
  - ./system-upgrade-patches.yaml
  # Add labels
  - |-
    apiVersion: apps/v1
    kind: Deployment
    metadata:
      name: system-upgrade-controller
      namespace: {{install.upgrade_controller.namespace}}
      labels:
        app.kubernetes.io/name: system-upgrade-controller
        app.kubernetes.io/instance: system-upgrade-controller
